@model eCommerce.ViewModels.System.Users.RegisterRequest

@{
    ViewData["Title"] = "Tạo mới";
}

    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Tạo mới nhân viên</h1>
        </div>
        <div class="row justify-content-center">
            <div class="card shadow mb-4 col-lg-8">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <label asp-for="UserName" class="control-label">Tên người dùng</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="FirstName" class="control-label">Tên</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="LastName" class="control-label">Họ</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label asp-for="Email" class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label asp-for="Password" class="control-label">Mật khẩu</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="ConfirmPassword" class="control-label">Nhập lại mật khẩu</label>
                                <input asp-for="ConfirmPassword"class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row justify-content-between">
                            <a asp-action="Employee" asp-controller="User" class="btn btn-info small">Về danh sách</a>
                            <button type="submit" class="btn btn-info">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
