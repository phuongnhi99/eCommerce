@using eCommerce.ViewModels.Common;
@model PagedResult<eCommerce.ViewModels.Catalog.Products.ProductViewModel>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- End Header Area -->
<!-- start banner Area -->
<section class="banner-area">
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-start">
            <div class="col-lg-12">
                <div class="active-banner-slider owl-carousel">
                    <!-- single-slide -->
                    <div class="row single-slide align-items-center d-flex">
                        <div class="col-lg-5 col-md-6">
                            <div class="banner-content">
                                <h1>Namidori New <br>Collection!</h1>
                                <p>
                                   Kiểu dáng hiện đại.
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="banner-img">
                                <img class="img-fluid" src="img/banner/banner-item2.png" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- single-slide -->
                    <div class="row single-slide">
                        <div class="col-lg-5">
                            <div class="banner-content">
                                <h1>Namidori New <br>Collection!</h1>
                                <p>
                                    Kiểu dáng hiện đại.
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="banner-img">
                                <img class="img-fluid" src="img/banner/banner-item2.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- start product Area -->
<section class="section_gap pb-0">
    <!-- single product slide -->
    <div class="single-product-slider">
        <div class="container">
            <div class="row">
                @if (Model.Items.Count == 0)
                {
                    <div class="col-md-12">
                      Không tìm thấy sản phẩm!!!
                    </div>

                }

                @foreach (var item in Model.Items)
                {
                    <!-- single product -->
                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <img class="img-fluid" src="img/product/shoe.jpg" alt="">
                            <div class="product-details">
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">
                                    <h6 class="hover-text">
                                        @Html.DisplayFor(modelItem => item.Name)
                                       @* @Html.ActionLink($"{item.Name}", "Detail", new { id = item.Id })*@
                                    </h6>
                                </a>
                                <div class="price">
                                    <h6>@Html.DisplayFor(modelItem => item.Price)</h6>
                                </div>
                            </div>
                        </div>
                    </div>

                }


            </div>
        </div>
    </div>
</section>
<!-- end product Area -->
